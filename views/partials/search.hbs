
<form id="search" class="center" action="/search" method="GET">
  {{!-- <span class="center"><img src="https://i.ibb.co/g7Y2xx8/logo.png" alt="logo"></span> --}}
  <div class="search-bar center">
    <input type="text" name="term"
      {{#if searchTerm}}
      value="{{searchTerm}}"
      {{/if}}
      placeholder="Search for a hero"
      id="term-input">
    <button type="submit" id="search-button" class=" waves-effect waves-circle waves-light btn-floating btn-large pulse blue darken-4"><i class="material-icons large">search</i></button>
  </div>
</form>
